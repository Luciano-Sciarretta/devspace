{
  "name": "project",
  "version": "0.1.0",
  "description": "SASS compile|autoprefix|minimize ",
  "main": "public/index.html",
  "author": "5t3ph",
  "scripts": {
    "start": "npm-run-all --serial watch:sass watch:postcss",
    "build:sass": "sass --no-source-map static_dev/styles:static/styles && npm-run-all postcss:*",
    "watch:sass": "sass --no-source-map --watch static_dev/styles:static/styles",
    "watch:postcss": "onchange \"static/styles/*.css\" -- postcss static/styles/*.css -u autoprefixer cssnano -r --no-map"
  },
  "dependencies": {
    "autoprefixer": "^10.4.0",
    "cssnano": "^5.0.17",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^9.1.0",
    "sass": "^1.49.8"
  },
  "devDependencies": {
    "onchange": "^7.1.0"
  }
}